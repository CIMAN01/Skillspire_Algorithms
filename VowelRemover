/**
 * Create a function that takes a string and removes the vowels
 * from the string (a, e, i, o, u)
 *
 * String str = "abcdDCBA123";
 * String strNew = str.replace("a", ""); // strNew is 'bcdDCBA123'
 **/

public class Vowels {

    // Create a method that takes a string and removes the vowels (a, e, i, o, u)
    public static String vowelRemover(String str) {
        // make sure the string is in lower case before proceeding
        str = str.toLowerCase();
        // create a new empty string
        String noVowelString = "";
        // go over each character
        for (int i = 0; i < str.length(); i++) {
            // if it's a vowel display that the vowel has not been added to the string
            if ((str.charAt(i) == 'a') || (str.charAt(i) == 'e') || (str.charAt(i) == 'i') ||
                    (str.charAt(i) == 'o') || (str.charAt(i) == 'u')) {
                // display the vowel not added
                System.out.println("Vowel '" + str.charAt(i) + "' not added");
            }
            else { // concatenate or add character to the string literal
                noVowelString += str.charAt(i);
            }
        }
        System.out.println("----------------------------------------");
        return noVowelString;
    }

    // run main program
    public static void main(String[] args) {
        // create some random string with vowels
        String someRandomString = "ABCD123aeiou";
        // invoke method and display results
        System.out.println(vowelRemover(someRandomString)); // output should be 'bcd123'
    }
}
