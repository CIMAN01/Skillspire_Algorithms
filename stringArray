public class StringArray {

    // create a method that takes a positive number and logs from 0 up to that #
    public static void numLog (int num){
        for (int i = 0; i < num; i++) {
            System.out.println(i);
        }
    }

    // create a method that takes an array of strings and
    // returns true if all strings have a length of three.
    public static boolean strArray (String[] arr) {
        for (int i = 0; i < arr.length; i++) {
            if(arr[i].length() != 3) {
                return false;
            }
        }
        return true;
    }

    public static void main(String[] args) {
        numLog(20);
        String[] names = {"get", "see", "mad"};
        System.out.println(strArray(names));
    }
}
